package employees;

public class Formal extends Employees{
	private int basePay;
	private int overTime;
	private int extraRate = overTime * super.getHourlyRate();

	Formal(String name, String type, int basePay) {
		super(name, type);
		this.basePay = basePay;
		// TODO Auto-generated constructor stub
	}

	@Override
	public void toDo() {
		System.out.println("칼퇴 준비!!!");
	}
	
	public int toOverTime(String OverTime) {
		this.overTime = overTime;
		System.out.println("오늘 " + this.overTime + "시간 추가 근무 => 추가 수당 : " + this.extraRate);
		return extraRate;
	}

}

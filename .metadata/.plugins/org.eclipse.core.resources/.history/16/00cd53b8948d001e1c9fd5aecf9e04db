package queueNumber;

import java.lang.reflect.Array;
import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class waitingNumber {
	public static Array[] list = new Array[30];
	public static Queue<Integer> waitingList = new LinkedList<>();
	public static Scanner sc = new Scanner(System.in);

	
	public static void main(String[] args) {
		for (int i = 0; i < list.length; i++) {
			list[i] = (i + 1);
		}
		
		
		Boolean reapeat = true;
		while (reapeat) {
			System.out.println("-------------------------------------");
			System.out.println("--1. 번호표 뽑기");
			System.out.println("--2. 대기 순번");
			System.out.println("--3. 번호표 버리기");
			System.out.println("--4. 종료");
			System.out.println("-------------------------------------");
			System.out.print("번호표를 뽑으세요!!");
			String number = sc.nextLine();
			
			switch (Integer.parseInt(number)) {
			case 1:
				pickWaitingNum();
				break;
			case 2:
				checkWaitingNum();
				break;
			case 3:
				throwWaitingNum();
				break;
			case 4:
				System.exit(0);
				reapeat = false;
				break;

			}
			
			
		}


		
	}

	private static void pickWaitingNum() {
		waitingList.offer();
	}


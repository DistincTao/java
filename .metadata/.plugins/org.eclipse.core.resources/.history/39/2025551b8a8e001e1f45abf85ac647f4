package collection;

import java.util.ArrayList;
import java.util.Comparator;
import java.util.List;
import java.util.Objects;
import java.util.Set;
import java.util.TreeSet;

public class ClassRoom{
	private int classNo;
	private Set <Student> stuSet;

	// 생성자
	public ClassRoom(int classNo) {
		this.classNo = classNo;
		this.stuSet = new TreeSet<Student>();
	}
	
	// getter, setter
	public int getClassNo() {
		return this.classNo;
	}

	public Set<Student> getStuSet() {
		return this.stuSet;
	}

	public void setStuSet(Set<Student> stuSet) {
		this.stuSet = stuSet;
	}

	public void addStudents(Student s) {
		// 정렬 기준이 없음 => 정렬 기준을 정해주는 코드 추가 필요
		for (int i = 0; i < stuSet.size(); i++) {
			Student other = (Student) stuSet;
			if (s.compare(s, other) != 0) {
				this.stuSet.add(s);
			}

		}

	}
	
	public void outputStudent() {
		for (Student s : this.stuSet) {
			System.out.println(s.toString());
		}
	}
	
	@Override
	public String toString() {
		return "반 : " + classNo + ", 학생들 : " + stuSet;
	}
	
	
	Comparator <Student> compIntRe = new Comparator<Student>() {
		@Override
		public int compare(Student s1, Student s2) {
			if (s1.getScore() < s2.getScore()) { 
				return 1;
			} else if (s1.getScore() == s2.getScore()) {
				return 0;
			} else {
				return -1;
			}
		}	
	}



}

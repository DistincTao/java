package department;

import employees.Formal;
import employees.Part;

public class CompanyEx1 {
	public static void main(String[] args) {
		
		Department salesTeam = new Department("영업팀");
		salesTeam.addMemebers(new Formal("둘리", "Full", 1500000, 0));
		salesTeam.addMemebers(new Part("희동", "Part", 12, 20));
		salesTeam.addMemebers(new Formal("영희", "Full", 2000000, 10));
		salesTeam.addMemebers(new Part("철수", "Part", 10, 25));
		salesTeam.addMemebers(new Formal("또치", "Full", 3000000, 20));
		salesTeam.addMemebers(new Part("마이콜", "Part", 8, 8));
		salesTeam.addMemebers(new Formal("도우너", "Full", 4500000, 30));
		salesTeam.addMemebers(new Part("고길동", "Part", 3, 30));
		
		salesTeam.deleteMemebers("마이콜");
		
		Accountant accountant = new Accountant("둘리엄마");
		
		accountant.calPay(salesTeam);
		

	}
}

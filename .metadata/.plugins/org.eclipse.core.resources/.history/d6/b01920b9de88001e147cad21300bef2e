package electric;

public class Buyer {
	private int budget;
	private int point;
	
	Buyer (int budget, int point) {
		this.budget = budget;
		this.point = point;
	}

	public int getBudget() {
		return this.budget;
	}
	public int getPoint() {
		return this.point;
	}
	
	public void setBudget(int budget) {
		this.budget = budget;
	}
	
	public void setPoint(int point) {
		this.point += point ;
	}
	
	@Override
	public String toString() {
		return "사양이 " + toString() + "를 구매합니다.";
	}

}

package queueNumber;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class waitingNumber {
	public static Queue<Integer> waitingList = new LinkedList<>();
	public static Scanner sc = new Scanner(System.in);

	
	
	public static void main(String[] args) {
		
		Boolean reapeat = true;
		while (reapeat) {
			System.out.println("-------------------------------------");
			System.out.println("--1. 번호표 뽑기");
			System.out.println("--2. 대기 순번");
			System.out.println("--3. 번호표 버리기");
			System.out.println("--4. 종료");
			System.out.println("-------------------------------------");
			System.out.print("번호표를 뽑으세요!!");
			int number = sc.nextInt();
			
			switch (number) {
			case 1:
				pickWaitingNum();
				break;
			case 2:
				checkWaitingNum();
				break;
			case 3:
				throwWaitingNum();
				break;
			case 4:
				System.exit(0);
				reapeat = false;
				break;

			}
			
			
		}


		
	}

	private static void pickWaitingNum() {
		if (waitingList.isEmpty()) {
			waitingList.add(1);
		} else {
			for (int i = 0; i < waitingList.size(); i++) {
				if (!waitingList.isEmpty() && waitingList.peek().equals(null)){
					waitingList.add(i + 1);
				}
			}
			
		}
	}

	private static void checkWaitingNum() {
		System.out.println(waitingList.size());
		
	}

	private static void throwWaitingNum() {
		waitingList.poll();
		
	}

}

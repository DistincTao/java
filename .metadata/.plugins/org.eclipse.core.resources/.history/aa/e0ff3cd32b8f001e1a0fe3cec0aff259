package collection2;

import java.util.Comparator;

public class ComparatorManager implements Sortable {

	@Override
	public Comparator <Student> getComparator(int i) {
		Comparator <Student> myComparator = null;
		switch (i) {
		case 1 :
			myComparator = new DescendingByScore();
			break;
		case 2 :
			myComparator = new AccendingByName();
			break;
		default :
			myComparator = new DescendingByName();
			break;	
		}
		return myComparator;	
	}

	@Override
	public int compare(Student o1, Student o2) {
		// TODO Auto-generated method stub
		return 0;
	}

	
}

package collection2;

public static class ComparatorManager {

	public Sortable getComparator(int i) {
		Sortable myComparator = null;
		switch (i) {
		case 1 :
			myComparator = new DescendingByScore();
			break;
		case 2 :
			myComparator = new AccendingByName();
			break;
		default :
			myComparator = new DescendingByName();
			break;	
		}
		return myComparator;	
	}

	
}
